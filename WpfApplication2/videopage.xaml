<Page x:Class="WpfApplication2.videopage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication2"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="videopage">

    <StackPanel Orientation="Vertical" Background="Bisque">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="playButton" Click="PlayButton_Click">Play</Button>
            <Button Name="clickButton" Click="StopButton_Click">Stop</Button>
        </StackPanel>
        <MediaElement Name="MyME"  Stretch="Fill" Source="Assets\Media\121.gif" MediaEnded="MyME_MediaEnded" LoadedBehavior="Manual"/>
    </StackPanel>
</Page>
